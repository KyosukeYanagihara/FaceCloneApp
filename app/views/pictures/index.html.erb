<p id="notice"><%= notice %></p>

<h1>一覧</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th>User　Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.content %></td>
        <td><%= link_to (image_tag picture.image.url), picture %></td>
        <td><%= image_tag picture.user.image.url %></td>
        <td><%= link_to picture.user.name, user_path(picture.user.id) %></td>
        <td><%= link_to '編集', edit_picture_path(picture) %></td>
        <td><%= link_to '削除', picture, method: :delete, data: { confirm: '削除してもいいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

